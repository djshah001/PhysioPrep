{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "app/*",
        "hooks/*",
        "components/*",
        "constants/*",
        "utils/*",
        "services/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}
